<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="650dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/layout">
        <view android:layout_width="match_parent" android:layout_height="150dp"
              class="android.support.v7.widget.AppCompatAutoCompleteTextView" id="@+id/view2" android:id="@+id/view1"
              android:text="Clark Kent \n Reporter \n Very quiet bespectacled reporter at \n the DailyPlanet. Clumsy fellow, but \n well built and looks strikingly familiar.\n Wonder which celebrity he looks like"
              app:fontFamily="sans-serif-medium"/>
        <view android:layout_width="match_parent" android:layout_height="200dp"
              class="android.support.v7.widget.AppCompatAutoCompleteTextView" id="@+id/view2" android:id="@+id/view2"
              android:text="Bruce Wayne\n Billionaire\n Incredibly smart billionaire industrialist\n and Notorious playboy. Also veru \n reclusive. Almost certainly the\n Batman.(Batman's gadgets must cost"
              app:fontFamily="sans-serif-medium"/>
        <view android:layout_width="match_parent" android:layout_height="200dp"
              class="android.support.v7.widget.AppCompatAutoCompleteTextView" id="@+id/view2" android:id="@+id/view3"
              android:text="Barack Obama  \n President of the USA \n 44th President of the USA.. Recipient \n of the Nobel peace prize (although no \n one is quite certain what exactly for). \n Suspected of being black."
              app:fontFamily="sans-serif-medium"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>